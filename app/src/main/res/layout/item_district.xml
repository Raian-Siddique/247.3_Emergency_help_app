<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <!-- Add your content inside the CardView, for example, a TextView -->


        <LinearLayout
            android:id="@+id/layDistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bottom_curved"
            >


            <ImageView
                android:id="@+id/districtCover_item"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bau"
                android:scaleType="centerCrop"
               android:layout_margin="5dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/districtName_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District Name"

                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:padding="3dp"
                android:layout_marginBottom="3dp"


                />





        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>