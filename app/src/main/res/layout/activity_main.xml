<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    >

   <!-- This is a CardView widget that contains a RelativeLayout with a TextView and an ImageView. -->
<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_centerInParent="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        android:layout_gravity="center"

        >

        <!-- This TextView displays a message prompting the user to call for emergency help. -->
        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need Emergency Help ? \ncall 999 "
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerVertical="true"/>

        <!-- This ImageView displays an icon for making a call and is clickable. -->
        <ImageView
            android:id="@+id/callIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/call_icon"
            android:layout_toRightOf="@id/phone_number"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Make a call"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="7dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact your local POLICE..."
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <!-- You can add more TextViews or other views here for the actual contact numbers -->

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="16dp"
        android:gravity="center" />


</LinearLayout>
